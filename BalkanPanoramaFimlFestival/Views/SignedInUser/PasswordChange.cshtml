@model PasswordChangeViewModel
@{
    ViewData["Title"] = "PasswordChange";
}

<h1>PasswordChange</h1>

@section Scripts
{
    @* Makes it possible to run the scripts inside of _ValidationScriptsPartial, so libraries can be installed related to those scripts. *@
    @* With adding this script here, validation on Registration form is being done on the client side anymore,
     without sending a request to the server.*@
    @await Html.PartialAsync("PartialScripts/_ValidationScriptsPartial")
    @await Html.PartialAsync("PartialScripts/_ShowPasswordScriptsPartial")
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <h2>ŞİFRE YENİLEME</h2>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-info" role="alert">
                @TempData["SuccessMessage"]
            </div>
        }

        @* General errors related to application(comes from ModelState) *@
        <div asp-validation-summary=ModelOnly class="alert alert-danger" role="alert">
        </div>

        <form asp-asp-controller="SignedInUser" asp-action="PasswordChange" method="post">
            <div class="row mb-3">
                <label for="PasswordOld" class="col-md-4 col-form-label" asp-for="PasswordOld"></label>
                <div class="col-md-8">
                    <input asp-for="PasswordOld" class="form-control">
                    <span class="text-danger" asp-validation-for="PasswordOld"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label for="PasswordNew" class="col-md-4 col-form-label" asp-for="PasswordNew"></label>
                <div class="col-md-8">
                    <input asp-for="PasswordNew" class="form-control">
                    <span class="text-danger" asp-validation-for="PasswordNew"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label for="ConfirmPasswordNew" class="col-md-4 col-form-label" asp-for="ConfirmPasswordNew"></label>
                <div class="col-md-8">
                    <input asp-for="ConfirmPasswordNew" class="form-control">
                    <span class="text-danger" asp-validation-for="ConfirmPasswordNew"></span>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-8 offset-md-4">
                    <button type="submit" class="btn btn-primary">Şifreyi Değiştir</button>
                </div>
            </div>

        </form>
    </div>
</div>